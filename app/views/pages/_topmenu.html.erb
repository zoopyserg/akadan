                        <i class="fa fa-sign-in"></i>
                        <span>Login</span>
                    <% end %>
                </li>
            <% end %>
            <% unless user_signed_in? %>
                <li class="nav-item dropdown-lg">
                    <%= link_to new_user_registration_path, class: "nav-link dropdown-toggle dropdown-toggle-nocaret waves-effect" do %>
                        <i class="fa fa-user-plus"></i>
                    <% end %>
                </li>
            <% end %>
            <% if user_signed_in? %>
                <li class="nav-item dropdown-lg">
                    <%= link_to conversations_path, class: "nav-link dropdown-toggle dropdown-toggle-nocaret waves-effect" do %>
