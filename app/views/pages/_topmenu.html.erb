                    <% end %>
                </li>
            <% end %>
            <% if user_signed_in? %>
                <li class="nav-item dropdown-lg">
                    <%= link_to notifications_path, class: "nav-link dropdown-toggle dropdown-toggle-nocaret waves-effect" do %>
                        <i class="fa fa-bell-o"></i>
                    <% end %>
                </li>
            <% end %>
            <% if user_signed_in? %>
