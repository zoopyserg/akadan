<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_chains.each do |message_chain| %>
      <tr>
        <td><%= message_chain.name %></td>
