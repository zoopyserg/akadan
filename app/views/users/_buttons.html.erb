<% if user_signed_in? %>
  <% if user.did_not_block?(current_user) && !current_user.blocked?(user) && !user.blocked?(current_user) && (current_user != user) && (user.is_public? || user.mutual_friend_of?(current_user)) %>
    <%= link_to person_conversation_starts_path(person_id: user.id), method: :post, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-comment mx-1"></i>
      Message
    <% end %>
  <% end %>
  <% if !user.blocked?(current_user) && user.can_become_a_friend_of?(current_user) && (current_user != user) %>
    <%= link_to friend_friend_requests_path(friend_id: user.id), method: :post, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-check mx-1"></i>
      Send a Friend Request
    <% end %>
  <% end %>
  <% if current_user.blocked?(user) && (current_user != user) %>
    <%= link_to blocked_user_blocking_path(blocked_user_id: user.id, id: current_user.blockings.find_by(blocked_user: user).id), method: :delete, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-close mx-1"></i>
      Unblock
    <% end %>
  <% end %>
  <% if !current_user.blocked?(user) && (current_user != user) %>
    <%= link_to blocked_user_blockings_path(blocked_user_id: user.id), method: :post, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-close mx-1"></i>
      Block
    <% end %>
  <% end %>
  <% if user.sent_friend_request_to?(current_user) && (current_user != user) %>
    <%= link_to accept_friend_friend_requests_path(friend_id: user.id), method: :post, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-check mx-1"></i>
      Accept Request
    <% end %>
    <%= link_to reject_friend_friend_requests_path(friend_id: user.id), method: :delete, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-close mx-1"></i>
      Reject Request
    <% end %>
  <% end %>
  <% if user.mutual_friend_of?(current_user) && (current_user != user) %>
    <%= link_to unfriend_friend_friend_requests_path(friend_id: user.id), method: :delete, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
      <i class="fa fa-close mx-1"></i>
      Remove from friends
    <% end %>
  <% end %>
<% elsif user.is_public? %>
  <%= link_to new_user_session_path, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
    <i class="fa fa-comment mx-1"></i>
    Message
  <% end %>
  <%= link_to new_user_session_path, class: "bg-white hover:bg-gray-100 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full flex justify-center items-center mb-2" do %>
    <i class="fa fa-check mx-1"></i>
    Send a Friend Request
  <% end %>
<% end %>
