<div class="row">
  <div class="col-lg-12 px-0 px-sm-3">
    <div class="card" data-pgc="jr.pagename">
      <div class="card-body">
        <h5 class="card-title mb-0" data-pgc-field="title">Messages</h5>
      </div>
    </div>

    <% @conversations.each do |conversation| %>
      <%= render "conversations/conversation", conversation: conversation %>
    <% end %>

    <div class="d-flex justify-content-center" data-pgc-define="jr.pagination" data-pgc-define-name="Pagination Centered" data-pgc-define-description="I use it to have a pagination" data-pgc-section="Page components">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="#">Previous</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </div>
  </div>
</div>
