<% conversation.messages.latest_first.limit(1).each do |message| %>
  <div class="card" data-pgc-define="jr.message" data-pgc-define-name="Message" data-pgc-section="Page components">
    <div class="<%= conversation_classes(conversation) %>">
      <div class="row">
        <div class="col-12 col-md-8">
          <div class="row">
            <div class="align-items-center col-md-4 d-flex flex-column">
              <% #= image_tag message.sender.avatar_url(:thumb), class: "rounded-circle", width: "100px", 'data-pgc-edit' => "image[src, no_content]", height: "100px" %>
              <p data-pgc-edit="name"><%= message.sender.full_name %></p>
            </div>
            <div class="col-md-8">
              <p data-pgc-edit="messagetext"><%= message.body %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class="row">
            <div class="col-md-12" data-pgc-edit="buttons">
              <%= link_to conversation_messages_path(conversation), class: "btn btn-light btn-block" do %>
                <i class="fa fa-comment"></i>&nbsp;Message
              <% end %>
              <button type="button" class="btn btn-light btn-block">
                <i class="fa fa-close"></i>&nbsp;Delete
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-hover">
          <tbody>
            <tr>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
