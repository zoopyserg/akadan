<div class="card">
  <div class="card-body">
    <%= form_with(model: [@conversation, @participation]) do |form| %>
      <% if @participation.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @participation.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
      </div>
      <div class="form-group">
        <%= form.label :user_id, 'User' %>
        <%= form.text_field :user_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= button_tag type: :submit, class: "btn btn-light px-5" do %>
          <i class="fa fa-check mx-1"></i>Add
        <% end %>
      </div>
    <% end %>
  </div>
</div>
