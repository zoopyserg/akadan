  <%= render "devise/shared/error_messages", resource: resource %>

<div class="card card-authentication1 mx-auto my-4">
  <div class="card-body">
    <div class="card-content p-2">
      <div class="text-center">
        <%= image_pack_tag "logo-icon.png", alt: "logo icon" %>
      </div>
      <div class="card-title text-uppercase text-center py-3">Sign Up</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :first_name,  class: "sr-only" %>
          <div class="position-relative has-icon-right">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control input-shadow", placeholder: "First Name" %>
            <div class="form-control-position">
              <i class="icon-user"></i>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :last_name,  class: "sr-only" %>
          <div class="position-relative has-icon-right">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control input-shadow", placeholder: "Last Name" %>
            <div class="form-control-position">
              <i class="icon-user"></i>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :username,  class: "sr-only" %>
          <div class="position-relative has-icon-right">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control input-shadow", placeholder: "Choose Username" %>
            <div class="form-control-position">
              <i class="icon-user"></i>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email,  class: "sr-only" %>
          <div class="position-relative has-icon-right">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-shadow", placeholder: "Enter Your Email ID" %>
            <div class="form-control-position">
              <i class="icon-envelope-open"></i>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "sr-only" %>
          <div class="position-relative has-icon-right">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control input-shadow", placeholder: "Choose Password" %>
            <div class="form-control-position">
              <i class="icon-lock"></i>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "sr-only" %>
          <div class="position-relative has-icon-right">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-shadow", placeholder: "Enter Password Again" %>
            <div class="form-control-position">
              <i class="icon-lock"></i>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="icheck-material-white">
            <%= f.check_box :accept_terms %>
            <%= f.label :accept_terms %>
          </div>
        </div>
        <%= f.submit "Sign up", class: "btn btn-light btn-block waves-effect waves-light" %>
        <div class="text-center mt-3">Sign Up With</div>
        <div class="form-row mt-4">
          <div class="form-group mb-0 col-6">
            <button type="button" class="btn btn-light btn-block">
              <i class="fa fa-facebook-square"></i> Facebook
            </button>
          </div>
          <div class="form-group mb-0 col-6 text-right">
            <button type="button" class="btn btn-light btn-block">
              <i class="fa fa-twitter-square"></i> Twitter
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-footer text-center py-3">
    <p class="text-warning mb-0">Already have an account? <%= link_to 'Sign In here', new_user_session_path %></p>
  </div>
</div>
