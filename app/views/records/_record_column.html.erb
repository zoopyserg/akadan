<div class="card" data-pgc-define="jr.recordColumn" data-pgc-define-name="Records Column" data-pgc-section="Page components">
  <div class="card-body px-0 px-sm-3 py-1">
    <div class="px-3 row">
      <div class="align-items-center col-lg-12 d-flex justify-content-between px-3">
        <div class="align-items-center d-flex">
          <div class="d-flex flex-column">
            <div class="icheck-material-white">
              <input type="checkbox" id="user-checkbox1" checked=""/>
              <label for="user-checkbox1"></label>
            </div>
          </div>
          <div class="d-flex flex-column">
            <i class="fa fa-chevron-up mx-1 my-1"></i>
            <i class="fa fa-chevron-down mx-1 my-1"></i>
          </div>
          <div>
            <h5 class="card-title mb-0 mx-1" data-pgc-edit="columnname">Repetitive Records</h5>
          </div>
        </div>
        <div class="align-items-center d-flex">
          <i class="fa fa-close mx-1 my-1"></i>
        </div>
      </div>
    </div>
    <div class="px-3 row">
      <div class="col-lg-12 d-flex justify-content-between">
        <div class="align-items-center d-flex">
          <div>
            <div class="form-check custom-control custom-switch">
              <input type="checkbox" class="form-check-input custom-control-input" id="customSwitch1"/>
              <label class="custom-control-label form-check-label" for="customSwitch1">Split Into Solved and Not-Solved</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="px-3 row">
      <div class="col-lg-12 d-flex justify-content-between">
        <div class="align-items-center d-flex">
          <div>
            <div class="align-middle custom-control custom-switch d-flex form-check">
              <input type="checkbox" class="form-check-input custom-control-input" id="customSwitch1"/>
              <label class="align-middle custom-control-label form-check-label" for="customSwitch1">Show Not Only Direct Children But Also Their Deep nested Children of this type</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="px-3 row">
      <div class="col-lg-12 d-flex justify-content-between">
        <div class="align-items-center d-flex">
          <div>
            <div class="align-middle custom-control custom-switch d-flex form-check">
              <input type="checkbox" class="form-check-input custom-control-input" id="customSwitch1"/>
              <label class="align-middle custom-control-label form-check-label" for="customSwitch1">Collapsed view</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="px-3 row">
      <div class="col-lg-12">
        <p class="mb-0">123 direct records of this type</p>
        <p class="mb-0">1230 deeply found records of this type</p>
        <p class="mb-0">1353 records of this type total</p>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">

        <% @records.each do |record| %>
          <%= render "records/record", record: record %>
        <% end %>

        <div class="d-flex justify-content-center" data-pgc="jr.pagination">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#">Previous</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">Next</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
