<div class="flex flex-wrap" id='friendsList'>
  <div class="w-full px-3 lg:px-0">
    <div class="bg-white shadow-md rounded overflow-hidden" data-pgc="jr.pagename">
      <div class="p-4">
        <h5 class="text-xl font-bold mb-0" data-pgc-field="title">Friends (<%= @friends.total_count %>)</h5>
      </div>
    </div>

    <% @friends.each do |friend| %>
      <%= render "users/user", user: friend %>
    <% end %>

    <%= paginate @friends %>
  </div>
</div>
