<div class="card">
  <div class="card-body">
    <%= form_with(model: record_type) do |form| %>
      <% if record_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(record_type.errors.count, "error") %> prohibited this record_type from being saved:</h2>

          <ul>
            <% record_type.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control', placeholder: "Enter Record Type Name" %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control', placeholder: "Enter Description" %>
      </div>
      <div class="form-group py-2">
      </div>
      <div class="form-group d-flex d-sm-flex justify-content-between">
        <%= button_tag type: :submit, class: "btn btn-light px-5" do %>
          <i class="fa fa-check mx-1"></i>Create!
        <% end %>
        <%= link_to record_types_path, class: 'btn btn-light px-5' do %>
          <i class="fa fa-close mx-1"></i>Cancel
        <% end %>
      </div>
    <% end %>
  </div>
</div>
