<h1>New Record Type</h1>

<%= render 'form', record_type: @record_type %>

<%= link_to 'Back', record_types_path %>

<div class="row mt-3"> 
  <div class="col-lg-12 px-0 px-sm-3"> 
    <div class="card" data-pgc="jr.pagename"> 
      <div class="card-body"> 
        <h5 class="card-title mb-0" data-pgc-field="title">New Record Type</h5> 
      </div>                                 
    </div>
    <div class="card"> 
      <div class="card-body"> 
        <form> 
          <div class="form-group"> 
            <label for="input-1">Name</label>                                             
            <input type="text" class="form-control" id="input-1" placeholder="Enter Your Name"> 
          </div>                                         
          <div class="form-group"> 
            <label for="input-2">Description</label>                                             
            <textarea class="form-control"></textarea> 
          </div>                                         
          <div class="form-group py-2"> 
          </div>                                         
          <div class="form-group"> 
            <button type="submit" class="btn btn-light px-5">
              <i class="fa fa-check"></i>&nbsp;Create
            </button>                                             
          </div>                                         
        </form>                                     
      </div>                                 
    </div>                             
  </div>                         
</div>
