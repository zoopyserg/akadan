<% if connection_type.hierarchy_siblings? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: Siblings</span>
  </div>
<% elsif connection_type.hierarchy_all_parent_generations? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: All Parent Generations</span>
  </div>
<% elsif connection_type.hierarchy_deep_siblings? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: Deep Siblings</span>
  </div>
<% elsif connection_type.hierarchy_all_tree_records? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: All Records Of Its Tree</span>
  </div>
<% elsif connection_type.hierarchy_all? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: All Records</span>
  </div>
<% elsif connection_type.hierarchy_all_roots? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: Roots of all trees</span>
  </div>
<% elsif connection_type.hierarchy_root? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: Root of the tree</span>
  </div>
<% elsif connection_type.hierarchy_closest_parent_of_type? %>
  <div class="col-lg-12">
    <span class="badge badge-primary">Hierarchy of targets: Closest parent of type <%= connection_type.closest_parent_type.name %></span>
  </div>
<% end %>
